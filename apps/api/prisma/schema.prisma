datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
  players   Player[] // relasi balik ke Player
}

model Room {
  id        String           @id @default(cuid())
  code      String           @unique
  status    RoomStatus       @default(LOBBY)
  createdAt DateTime         @default(now())
  teams     Team[]
  modules   ModuleInstance[]
}

model Team {
  id      String   @id @default(cuid())
  name    String
  roomId  String
  room    Room     @relation(fields: [roomId], references: [id])
  players Player[]
  score   Int      @default(0)
}

model Player {
  id     String @id @default(cuid())
  userId String
  teamId String
  role   Role
  user   User   @relation(fields: [userId], references: [id])
  team   Team   @relation(fields: [teamId], references: [id])
}

model ModuleInstance {
  id     String  @id @default(cuid())
  roomId String
  type   String // "wire", "morse", "maze", etc.
  state  Json
  solved Boolean @default(false)
  room   Room    @relation(fields: [roomId], references: [id])
}

enum RoomStatus {
  LOBBY
  RUNNING
  FINISHED
}

enum Role {
  DEFUSER
  EXPERT
}
